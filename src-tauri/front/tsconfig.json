{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "ts" // 确保这里包含了你的 TypeScript 文件所在的目录
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}