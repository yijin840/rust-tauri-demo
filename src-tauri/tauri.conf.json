{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tauri App",
  "version": "0.1.0",

  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "front",
    "beforeDevCommand": "npm install && npm run start",
    "beforeBuildCommand": "npm install && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Tauri",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "url": "http://localhost:5173"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
